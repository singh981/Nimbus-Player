<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
    <style name="SeekArc">
        <item name="arcColor">@color/dark_red</item>
    </style>
    
    <style name="SeekArcLight">
        <item name="arcColor">@color/red</item>
    </style>
    
    
	<style name="Theme.Transparent" parent="android:Theme">
	  <item name="android:windowIsTranslucent">true</item>
	  <item name="android:windowContentOverlay">@null</item>
	  <item name="android:windowNoTitle">true</item>
	  <item name="android:windowIsFloating">true</item>
	  <item name="android:backgroundDimEnabled">true</item>
	</style>
	
	<style name="ThemeWithCorners" parent="android:Theme.Dialog">
	  <item name="android:windowBackground">@drawable/bkg</item>
	  <item name="android:backgroundDimEnabled">true</item>
	</style>
	
	<style name="noAnimTheme" parent="android:Theme">
	  <item name="android:windowAnimationStyle">@null</item>
	</style>
	  
	<!-- <style name="anim" parent="Animation.Dialog">
	    <item name="windowEnterAnimation">@anim/entry_anim</item>
	    <item name="windowExitAnimation">@anim/exit_anim</item>
	</style> -->


</resources>
